<Window x:Class="LevelRedactor.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelRedactor"
        mc:Ignorable="d"
        Title="ExportWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar BorderBrush="Black" BorderThickness="1" ToolBarTray.IsLocked="True">
            <Button x:Name="addFilesButton" ToolTip="Добавить файлы в список">
                <Image Source="Resources\addFiles-icon.png"/>
            </Button>
            <Button x:Name="removeFileButton" ToolTip="Удалить файл из списка">
                <Image Source="Resources\removeFile-icon.png"/>
            </Button>
            <Separator/>
            <Button x:Name="sendFilesButton" ToolTip="Удалить файл из списка">
                <Image Source="Resources\sendFiles-icon.png"/>
            </Button>
        </ToolBar>
    </Grid>
</Window>
